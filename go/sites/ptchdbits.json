{
  "id": "ptchdbits",
  "name": "彩虹岛",
  "domain": "https://ptchdbits.co/",
  "encoding": "UTF-8",
  "public": false,
  "schema": "NexusPHP",
  "price": {
    "FREE": [
      "//h1[@id='top']/img[@class='pro_free']"
    ],
    "2XFREE": [],
    "HR": [
      "//b[contains(text(),'H&R:')]"
    ],
    "PEER_COUNT": [
      "//div[@id='peercount']/b[1]"
    ]
  },
  "category": {
    "movie": [
      {
        "id": 401,
        "cat": "Movies",
        "desc": "Movies"
      }
    ],
    "tv": [
      {
        "id": 404,
        "cat": "TV/Documentary",
        "desc": "Documentaries"
      },
      {
        "id": 405,
        "cat": "TV/Anime",
        "desc": "Animations"
      },
      {
        "id": 402,
        "cat": "TV",
        "desc": "TV Series"
      },
      {
        "id": 403,
        "cat": "TV",
        "desc": "TV Shows"
      }
    ]
  },
  "requests": {
    "search": {
      "parser": "CssSelector",
      "method": "GET",
      "path": "torrents.php",
      "list": {
        "selector": "table.torrents > tr:has(table.torrentname)"
      },
      "params": {
        "search": [
          "{keyword}"
        ]
      },
      "fields": {
        "id": {
          "selector": "a[href*=\"details.php?id=\"]",
          "attribute": "href",
          "filters": [
            {
              "name": "re_search",
              "args": [
                "\\d+",
                0
              ]
            }
          ]
        },
        "category": {
          "selector": "a[href*=\"?cat=\"]",
          "attribute": "href",
          "filters": [
            {
              "name": "querystring",
              "args": "cat"
            }
          ]
        },
        "title": {
          "any": [
            {
              "selector": "table.torrentname > tr > td.embedded > a[href*=\"details.php?id=\"]"
            },
            {
              "selector": "table.torrentname > tr > td.embedded > a[title][href*=\"details.php?id=\"]",
              "attribute": "title"
            }
          ]
        },
        "details": {
          "selector": "a[href*=\"details.php?id=\"]",
          "attribute": "href"
        },
        "download": {
          "selector": "a[href*=\"download.php?id=\"]",
          "attribute": "href"
        },
        "size": {
          "selector": "td:nth-child(5)"
        },
        "grabs": {
          "selector": "td:nth-child(8)"
        },
        "seeders": {
          "selector": "td:nth-child(6)"
        },
        "leechers": {
          "selector": "td:nth-child(7)"
        },
        "date_elapsed": {
          "selector": "td:nth-child(4) > span",
          "optional": true
        },
        "date_added": {
          "selector": "td:nth-child(4) > span",
          "attribute": "title",
          "optional": true
        },
        "downloadvolumefactor": {
          "case": {
            "img.pro_free": 0,
            "img.pro_free2up": 0,
            "img.pro_50pctdown": 0.5,
            "img.pro_50pctdown2up": 0.5,
            "img.pro_30pctdown": 0.3,
            "*": 1
          }
        },
        "uploadvolumefactor": {
          "case": {
            "img.pro_50pctdown2up": 2,
            "img.pro_free2up": 2,
            "img.pro_2up": 2,
            "*": 1
          }
        },
        "hr_days": {
          "selector": "div.circle > div.circle-text",
          "filters": [
            {
              "name": "re_search",
              "args": [
                "\\d",
                0
              ]
            }
          ]
        },
        "minimumratio": {
          "text": "{% if fields[ 'hr_days' ] %}999999{% else %}0{% endif %}"
        },
        "minimumseedtime": {
          "text": "{% if fields[ 'hr_days' ] %}{{ (fields[ 'hr_days' ]|int)*86400 }}{% else %}0{% endif %}"
        },
        "description": {
          "selector": "font.subtitle",
          "remove": "div",
          "filters": [
            {
              "name": "split",
              "args": [
                "\n",
                -1
              ]
            }
          ]
        },
        "labels": {
          "selector": "font.subtitle > div[style] > div.tag"
        }
      }
    },
    "my_hr": {
      "parser": "CssSelector",
      "method": "GET",
      "path": "hnr.php?id={userId}",
      "list": {
        "selector": "#outer table tr:has(td.rowfollow)"
      },
      "fields": {
        "name": {
          "selector": "td:nth-child(2)"
        },
        "uploaded": {
          "selector": "td:nth-child(8)"
        },
        "downloaded": {
          "selector": "td:nth-child(9)"
        },
        "share_ratio": {
          "selector": "td:nth-child(10)",
          "type": "float"
        },
        "need_seed_time": {
          "selector": "td:nth-child(6)"
        },
        "downloaded_time": {
          "selector": "td:nth-child(11)"
        },
        "remaining_inspection_time": {
          "selector": "td:nth-child(4)"
        }
      }
    }
  }
}
