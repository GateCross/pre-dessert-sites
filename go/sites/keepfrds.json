{
  "id": "keepfrds",
  "name": "朋友",
  "domain": "https://pt.keepfrds.com/",
  "encoding": "UTF-8",
  "public": false,
  "schema": "NexusPHP",
  "required": {
    "cookie": true
  },
  "price": {
    "has_free": true,
    "has_2x_free": true
  },
  "category": {
    "movie": [
      {
        "id": 401,
        "cat": "Movies",
        "desc": "Movies/电影"
      },
      {
        "id": 301,
        "cat": "Movies",
        "desc": "Movie Packs/电影(合集)"
      }
    ],
    "tv": [
      {
        "id": 404,
        "cat": "TV/Documentary",
        "desc": "Documentaries/纪录片"
      },
      {
        "id": 304,
        "cat": "TV/Documentary",
        "desc": "Documentary Packs/纪录片(合集)"
      },
      {
        "id": 405,
        "cat": "TV/Anime",
        "desc": "Animations/动漫"
      },
      {
        "id": 305,
        "cat": "TV/Anime",
        "desc": "Animation Packs/动漫(合集)"
      },
      {
        "id": 402,
        "cat": "TV",
        "desc": "TV Series/剧集"
      },
      {
        "id": 302,
        "cat": "TV",
        "desc": "TV Serie Packs/剧集(合集)"
      },
      {
        "id": 403,
        "cat": "TV",
        "desc": "TV Shows/综艺"
      },
      {
        "id": 303,
        "cat": "TV",
        "desc": "TV Show Packs/综艺(合集)"
      }
    ]
  },
  "requests": {
    "search": {
      "fields": {
        "description": {
          "selector": "a[title][href*=\"details.php?id=\"]",
          "attribute": "title"
        },
        "labels": {
          "selector": "a[title][href*=\"details.php?id=\"] > span"
        },
        "title": {
          "selector": "table.torrentname tr td",
          "remove": "a,b"
        }
      }
    },
    "seeding_statistics": {
      "disabled_extends": {
        "headers": true,
        "list": true
      },
      "fields": {
        "size": {
          "selector": "//*[@id='outer']/table/tbody/tr/td/table[1]/tbody/tr[18]/td[2]/text()",
          "filters": [
            {
              "name": "byte_size"
            }
          ]
        },
        "count": {
          "selector": "//*[@id='info_block']/tbody/tr/td/table/tbody/tr/td[1]/a[6]/text()"
        }
      }
    },
    "latest_notice": {
      "fields": {
        "title": {
          "selector": "//*[@id='outer']/table/tbody/tr/td/table[2]/tbody/tr/td/div/a[1]/*[self::b or self::strong]"
        },
        "date": {
          "selector": "//*[@id='outer']/table/tbody/tr/td/table[2]/tbody/tr/td/div/a[1]/text()",
          "remove": "b",
          "filters": [
            {
              "name": "re_search",
              "args": [
                "(\\d{4}\\.\\d{2}\\.\\d{2})",
                1
              ]
            },
            {
              "name": "timestamp"
            }
          ]
        },
        "content": {
          "selector": "//*[@id='outer']/table/tbody/tr/td/table[2]/tbody/tr/td/div/div[1]"
        }
      }
    }
  }
}
