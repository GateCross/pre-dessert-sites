{
  "id": "audiences",
  "name": "观众",
  "domain": "https://audiences.me",
  "public": false,
  "schema": "NexusPHP",
  "required": {
    "cookie": true,
    "sign_in": true
  },
  "meta": {
    "has_free": true,
    "has_2x_free": true
  },
  "category": {
    "movie": [
      {
        "id": 401,
        "cat": "Movies",
        "desc": "电影/Movies"
      },
      {
        "id": 407,
        "cat": "Movies/Sports",
        "desc": "Sports/体育"
      }
    ],
    "tv": [
      {
        "id": 402,
        "cat": "TV",
        "desc": "剧集/TV-Series"
      },
      {
        "id": 403,
        "cat": "TV",
        "desc": "综艺/TV-Show"
      },
      {
        "id": 406,
        "cat": "TV/Documentary",
        "desc": "纪录片/Documentary"
      }
    ]
  },
  "requests": {
    "search": {
      "fields": {
        "description": {
          "selector": "td.embedded > span[style]"
        },
        "labels": {
          "array": true,
          "selector": "td.embedded > span.tags"
        },
        "hr_days": {
          "selector": "img.hitandrun",
          "attribute": "title",
          "filters": [
            {
              "name": "not_blank",
              "args": [
                "2",
                "0"
              ]
            }
          ]
        }
      }
    },
    "user_basic_info": {
      "fields": {
        "bonus": {
          "selector": "//a[contains(@href,'mybonus') or contains(@href,'bonus.php')]/following-sibling::text()",
          "trim_chars": true,
          "filters": [
            {
              "name": "replace",
              "args": [
                "] :",
                ""
              ]
            }
          ]
        }
      }
    },
    "seeding_statistics": {
      "parser": "CssSelector",
      "headers": {
        "Referer": "https://audiences.me/userdetails.php"
      },
      "disabled_extends": {
        "headers": true,
        "list": true
      },
      "fields": {
        "count": {
          "selector": "table.table.table-bordered tr:has(td:contains(Total)) td:nth-child(2)"
        },
        "size": {
          "selector": "table.table.table-bordered tr:has(td:contains(Total)) td:nth-child(3)",
          "filters": [
            {
              "name": "byte_size"
            }
          ]
        }
      }
    }
  }
}
